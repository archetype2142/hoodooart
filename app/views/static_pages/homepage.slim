css:
  .masonry {
    column-count: 1;
  }

  .break-inside { break-inside: avoid; }

  @media only screen and (max-width: 768px) {
    .masonry-sm {
      column-count: 2;
    }
  }

  @media only screen and (min-width: 768px) {
    .masonry-md {
      column-count: 3;
    }  
  }

section.homepage-header.relative.bg-white.text-white.mt-5
  = render(CarouselComponent.new((1..9).to_a.map { |idx| "slider/#{idx}.jpeg" } ))
  .absolute.mx-auto.z-10.h-fit.w-full.mt-28 style="top: 0; left: 0; bottom: 0; right: 0; margin: auto;"
    .w-full.flex.justify-center.flex-col
      div.text-center.drop-shadow-lg
        h1.font-semibold.text-4xl.md:text-6xl.lg:text-7xl.text-white.leading-normal.mb-6 
          span = I18n.t('welcome')
        p.font-normal.text-xl.text-white.leading-relaxed.mb-12 = t('wholesale_&_importer')
        a.px-6.py-4.bg-royalblue.text-white.font-semibold.text-lg.rounded-xl.hover:bg-blue-900.transition.ease-in-out.duration-500 href="/products" = t('all_products')
        .flex.flex-col.space-y-4.sm:flex-row.sm:justify-center.sm:space-y-0

h2.my-5.text-2xl.ml-2.md:text-left.text-center = t('categories')

.masonry.masonry-sm.masonry-md.mx-2
  - Category.all.order("random()").in_groups(3) do |categories|
    .rounded-lg.pt-1.break-inside
      - categories.each do |category|
        - next if category.nil?
        .h-full.mt-4
          = link_to products_path(q: { categories_title_cont: category.title.downcase }, class: 'h-full') do
            .relative.magic-box.h-full
              .category-image-box.text-center.relative.rounded-lg.bg-white.shadow-lg.rounded-lg.h-full.w-full
                - if category.image.attached?
                  = image_tag category.image, class: 'max-h-full w-auto rounded-lg border'      
              - if category.image.attached?
                .absolute.centered-text.font-semibold.text-2xl.text-white.p-4 = category.title.upcase


