css:
  @media only screen and (max-width: 600px) {
    .category-image-box img {
      object-fit: cover;
      object-position: top;
      max-height: 300px;
      width: 100%;
    }
  }

  .homepage-header {
    background: linear-gradient(
      rgba(0, 0, 0, 0.2),
      rgba(74,105,187, 0.5)
    ), url("#{asset_path('stock')}") no-repeat;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
  }

  .magic-box:hover .centered-text {
    color: black;
  }

  .centered-text {
    position: absolute;
    width: 100%;
    top: 95%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @media only screen and (max-width: 600px) {
    .centered-text {
      position: absolute;
      top: 80%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .homepage-header {
      height: 60vh;
    }
  }

  .category-image-box {
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .category-image-box:hover {
    transform: scale(1.01);
  }

  .category-image-box:after {
    content:"\A";
    width:100%;
    height:100%;
    /* background: rgb(74,105,187, 0.4);*/
    /*background: -moz-linear-gradient(180deg, rgba(255,255,255,0) 39%, rgba(74,105,187,0.9346113445378151) 100%);
    background: -webkit-linear-gradient(180deg, rgba(255,255,255,0) 39%, rgba(74,105,187,0.9346113445378151) 100%);
    background: linear-gradient(180deg, rgba(255,255,255,0) 39%, rgba(74,105,187,0.9346113445378151) 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#ffffff",endColorstr="#4a69bb",GradientType=1);*/
    /*background: linear-gradient(
      rgba(74,105,187, 0.5),
      rgba(0, 0, 0, 0.5)
    )*/
    background: linear-gradient(180deg, rgba(0,0,0,0.2) 39%, rgba(74,105,187,0.5) 100%);
    position:absolute;
    top:0;
    left:0;
    transition: all 0.3s ease;
  }

  .category-image-box:hover:after {
