css:
  @media only screen and (max-width: 600px) {
    .category-image-box img {
      object-fit: cover;
      object-position: top;
      max-height: 300px;
      width: 100%;
    }
  }

  .magic-box:hover .centered-text {
    color: black;
  }

  .centered-text {
    position: absolute;
    width: 100%;
    top: 95%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @media only screen and (max-width: 600px) {
    .centered-text {
      position: absolute;
      top: 80%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .homepage-header {
      height: 60vh;
    }
  }

  .category-image-box {
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .category-image-box:hover {
    transform: scale(1.01);
  }

  .category-image-box:after {
    content:"\A";
    width:100%;
    height:100%;
