section.homepage-header.mt-5 class="bg-white text-white"
  .py-8.px-14.max-w-screen-xl.lg:py-48.w-full.mx-auto
    .w-full.flex.justify-center.flex-col
      div.text-center
        h1.font-semibold.text-4xl.md:text-6xl.lg:text-7xl.text-white.leading-normal.mb-6 
          span = I18n.t('welcome')
        p.font-normal.text-xl.text-white.leading-relaxed.mb-12 = t('wholesale_&_importer')
        a.px-6.py-4.bg-royalblue.text-white.font-semibold.text-lg.rounded-xl.hover:bg-blue-900.transition.ease-in-out.duration-500 href="/products" = t('all_products')
        div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0"

h2.my-5.text-2xl.ml-2.md:text-left.text-center = t('categories')
.mt-8.px-2.md:px-0.columns-2.gap-5.sm:columns-2.sm:gap-8.md:columns-3.lg:columns-4
  - Category.all.each_with_index do |category, idx|
    = link_to products_path(q: { categories_title_cont: category.title.downcase }) do
      .relative.magic-box
        .category-image-box.text-center.relative.rounded-lg.bg-white.shadow-lg.rounded-lg class="#{idx == 0 ? '' : 'mt-8'}"
          - if category.image.attached?
            = image_tag category.image, class: 'image-category rounded-lg object-cover'
        .absolute.centered-text.font-semibold.text-2xl.text-white.p-4 = category.title.upcase

